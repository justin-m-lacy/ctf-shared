{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "typeRoots": [
      "./node_modules",
    ],
    "types": [
      "node"
    ],
    "importsNotUsedAsValues": "remove",
    "declaration": true,
    "declarationDir": "lib/types",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "paths": {
      "src/*": [
        "./src/*"
      ],
      "buffers-out/*": [
        "./buffers-out/*"
      ]
    }
  },
  "include": [
    "./index.ts",
    "./src/**/*",
    "./buffers-out/**/*"
  ],
  "exclude": [
    "node_modules",
    "flatbuffers",
    "lib",
    "types"
  ]
}