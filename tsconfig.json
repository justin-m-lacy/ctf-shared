{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "lib",
    "target": "esnext",
    "module": "commonjs",
    "typeRoots": [
      "./node_modules",
    ],
    "importsNotUsedAsValues": "remove",
    "declaration": true,
    "declarationDir": "types",
    "sourceMap": true,
    "incremental": true,
    "skipLibCheck": true,
    "composite": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "esnext"
    ],
    "types": [
      "node"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "flatbuffers/**/*",
    "lib",
    "types"
  ]
}